<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Twitter Handle</th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <th scope="row"></th>
      <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
      <td><%= friend.email%></td>
      <td><%= friend.phone%></td>
      <td><%= friend.twitter%></td>
      <td> <%= link_to "Show this friend", friend %></td>
    </tr>
   <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>

<% else %>
Log in to see more...
<% end %>